<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background overlay (optional, can be removed if not needed) -->
    <item>
        <color android:color="#80000000"/> <!-- Semi-transparent black -->
    </item>

    <!-- Transparent center -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Corner lines -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#FFFFFF"/> <!-- White border -->
            <padding android:left="40dp" android:right="40dp" android:top="40dp" android:bottom="40dp"/>
        </shape>
    </item>
</layer-list>